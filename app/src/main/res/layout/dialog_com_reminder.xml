<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_size_10">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_size_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_reminder_subbg"
            android:gravity="center"
            android:textColor="#6b6b6b"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size_20"
            android:background="@drawable/dialog_reminder_canbg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/layout_size_10"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_15" />

</RelativeLayout>