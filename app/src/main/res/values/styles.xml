<resources>
    <!--应用主题-->
    <style name="MyAppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:typeface">serif</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--<style name="FirstTheme" parent="@android:style/Theme.Light.NoTitleBar">-->
        <!--<item name="android:typeface">serif</item>-->
        <!--&lt;!&ndash;<item name="android:windowIsTranslucent">true</item>&ndash;&gt;-->
        <!--&lt;!&ndash; All customizations that are NOT specific to a particular API-level can go here. &ndash;&gt;-->
    <!--</style>-->


    <!--自定义提示对话框-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/comm_dialog_bg_shape</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--文本样式主题-->
    <style name="text_style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
